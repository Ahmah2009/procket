{so_name, "procket.so"}.

{port_sources, ["c_src/procket.c"]}.
{port_envs, [
%    {"LDFLAGS", "$LDFLAGS -Lc_src -lancillary -lev"}
    {"LDFLAGS", "$LDFLAGS -Lc_src -lancillary"}
    ]}.

{pre_hooks, [
    {compile, "make -C c_src -f Makefile.ancillary -f Makefile.cmd"}
    ]}.

{clean_files, [
        "c_src/*.a",
        "c_src/*.o",
        "priv/procket"
    ]}.
